<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bugtrackerdb</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.default_schema">bugtrackerdb</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="current_session_context_class">thread</property>
  <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
  <property name="hbm2ddl.auto">update</property>
  <mapping resource="unlp/edu/core/Estado.hbm.xml"/>
  <mapping resource="unlp/edu/core/EstadoItem.hbm.xml"/>
  <mapping resource="unlp/edu/core/EstadoHistorico.hbm.xml"/>
  <mapping resource="unlp/edu/core/Item.hbm.xml"/>
  <mapping resource="unlp/edu/core/Miembro.hbm.xml"/>
  <mapping resource="unlp/edu/core/Proyecto.hbm.xml"/>
  <mapping resource="unlp/edu/core/Role.hbm.xml"/>
  <mapping resource="unlp/edu/core/TipoItem.hbm.xml"/>
  <mapping resource="unlp/edu/core/Usuario.hbm.xml"/>
  <mapping resource="unlp/edu/core/Estado_EstadoSiguiente.hbm.xml"/>
  <mapping resource="unlp/edu/core/Estado_Miembro.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
